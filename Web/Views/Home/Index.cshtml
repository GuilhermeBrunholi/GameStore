<div class="row">
    <tbody>
        @foreach (var item in @ViewBag.games)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <a><img class="card-img-top" src="@item.imagem" alt=""></a>
                    <div class="card-body">
                    <h4 class="card-title">
                        <a>@item.nome </a>
                    </h4>
                    <hr>
                    <h6 >R$ @item.preco</h6>
                    </div>
                    <div>
                        <a href="/Home/AdcCarrinho/@item.id" class="btn btn-primary btn-lg btn-block">Colocar no Carrinho</a>
                    </div>
                </div>
            </div>
        }
    </tbody>

</div>

<style>
    h6 {
        color: #66ff33;
        float: right;
    }
</style>